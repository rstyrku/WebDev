<% include ../partials/header %>\

<div class = 'container'>
    <div class = 'row'>
        <h1 style="text-align:center">Add New Comment to <%= campground%></h1>

        <div style="width: 30%; margin: 25px auto">
            <form action ="/campgrounds/<%=campground%>/comments" method = "POST">
                <div class = 'form-group'>
                    <input type="text" name="comment" placeholder = "Text" class = "form-control"/>
                </div>
                <div class = 'form-group'>
                    <input type="text" name="author" placeholder = "Author" class = "form-control"/>
                </div>
                <div class = 'form-group'>
                    <button class = "btn btn-large btn-block btn-primary">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>

    </div>
</div>
<% include ../partials/footer %>